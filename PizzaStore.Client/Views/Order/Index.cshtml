@model IEnumerable<PizzaStore.Domain.Models.OrderModel>

@{
    ViewData["Title"] = "Order";
}

<h2>Order</h2>

@if (Model.Count() <= 0)
{
    <h3>There is nothing in your order</h3>
}

<table class="table">
    <head>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OTotal)
            </th>
        </tr>

    </head>

    <body>
        @foreach(var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(modelItem => item.FName)
                </td>
                <td>
                    @Html.DisplayNameFor(modelItem => item.LName)
                </td>
                <td>
                    @Html.DisplayNameFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayNameFor(modelItem => item.OTotal)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.OrderId" class="btn btn-info">Delete</a>
                </td>
            </tr>
        }
    </body>
</table>