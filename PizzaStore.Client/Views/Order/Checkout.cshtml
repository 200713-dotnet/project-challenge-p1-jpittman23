@model PizzaStore.Domain.Models.OrderModel

@{
  ViewData ["Title"] = "Check out";
}

<h1> Create Order here </h1>

<form asp-action="Checkout" method="post" class="form-horizontal" role="form">
    <h4>Last Step:</h4>
    <hr />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FName" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="FName" class="form-control" />
            <span asp-validation-for="FName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="LName" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="LName" class="form-control" />
            <span asp-validation-for="LName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Address" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Complete order" />
        </div>
    </div>

</form>