@model IEnumerable<PizzaStore.Domain.Models.PizzaModel>

<li class="dropdown">
    <a asp-controller="Pizza" asp-action="AllPizzas"
       class="dropdown-toggle" data-toggle="dropdown">Pizzas<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var p in @Model)
        {
            <li>
                @p
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Pizza" asp-action="AllPizzas" asp-route-category="">View all pizzas</a>
        </li>
    </ul>
</li>