@model PizzaStore.Domain.Models.PizzaModel

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.Image alt="Piture of @Model.Name">
        <div class="caption">
            <h2 class="pull-right">@Model.Price.ToString("c")</h2>
            <h2>
                <a asp-controller="Pizza" asp-action="Details" asp-route-itemid="@Model.Id">@Model.Name</a>
            </h2>
            <p>@Model.Description</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="Order" asp-action="AddtoCart" asp-route-pizzaId="@Model.Id">Add Pizza</a>
            </p>
        </div>
    </div>
</div>