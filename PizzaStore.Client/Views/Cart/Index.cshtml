@model ItemViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>Your Cart</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Selected Amount</th>
            <th>Pizza</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.Cart.cart)
        {
            <tr>
                <td class="text-center"><a class="btn btn-default" asp-action="RemoveFromShoppingCart" asp-route-pizzaId="@line.Pizzas.Id"><b>-</b></a><b>@line.Total</b><a class="btn btn-default" asp-action="AddToShoppingCart" asp-route-pizzaId="@line.Pizzas.Id"><b>+</b></a></td>
                <td class="text-left">@line.Pizzas.Name</td>
                <td class="text-right">@line.Pizzas.Price.ToString("c")</td>
                <td class="text-right">
                    @((line.Total * line.Pizzas.Price).ToString("c"))
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">
                @Model.CartTotal.ToString("c")
            </td>
        </tr>
    </tfoot>
</table>

<div align="right">
    @if (Model.CartTotal > 0)
    {
        <a asp-controller="Orders" asp-action="Checkout" class="btn btn-primary">Check Out</a>
    }
</div>
<div align="left">
    <a asp-controller="Cart" asp-action="ClearCart" class="btn btn-danger">Clear Cart</a>
</div>